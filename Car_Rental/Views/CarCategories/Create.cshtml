@model Car_Rental.Models.CarCategory;
<!--Modal contact us container-->
<div class="container-fluid">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="margin-bottom: 20px">
            <label asp-for="Category_Name" class="control-label"></label>
            <input asp-for="Category_Name" class="form-control" pattern=".{3,}" required title="3 characters minimum"/>
            <span asp-validation-for="Category_Name" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom: 20px">
            <label asp-for="ImgUrl" class="control-label"></label>
            <input asp-for="ImgUrl" class="form-control" required/>
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-bottom: 20px">
            <label asp-for="Details" class="control-label"></label>
            <input asp-for="Details" class="form-control" pattern=".{10,}" required title="10 characters minimum"/>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>