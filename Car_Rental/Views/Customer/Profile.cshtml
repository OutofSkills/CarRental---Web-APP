@model Customer 
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    <!--JQUERY-->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <!--JavaScript-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
            crossorigin="anonymous"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!--local CSS-->
    <link rel="stylesheet" href="\css\ProfileStyle.css">

    <title>User Profile</title>
</head>

<body class="d-flex flex-column min-vh-100">
    <br>
    <!--User Profile-->
    <div class="container">
        <div class="row gx-5 gy-3">
            <!--User picture card-->
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="user-avatar">
                                    @if (Model.Image == null)
                                    {
                                        <!--Picture hiden input-->
                                        <input type="image" src="\Pictures\Avatars\User_avatar.jpg" height="90" width="90" />
                                    }
                                    else
                                    {
                                        <!--Picture hiden input-->
                                        <input type="image" class="rounded-circle" src="@Url.Action("GetImage", "Customer", new { username = Model.UserName })" height="90" width="90" />
                                    }

                                </div>
                                <h5 class="user-name">@Model.UserName</h5>
                                <h6 class="user-email">@Model.Email</h6>
                            </div>
                            <div class="about">
                                <h5>About</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Details card-->
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <form action="UpdateProfile" method="post" enctype="multipart/form-data">

                            <input type="hidden" value="@Model.CustomerID" name="CustomerID" />

                            <!--Picture input-->
                            <input asp-for="Image" type="file" id="my_file" style="display: none;" />


                            <div class="row gx-5 gy-3">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary">Personal Details</h6>
                                </div>

                                <div class="form-group">
                                    @if (ViewBag.EditStatus == 1)
                                    {
                                        <div class="alert alert-success">
                                            @ViewBag.Message
                                        </div>
                                    }
                                    else if (ViewBag.EditStatus == 0)
                                    {
                                        <div class="alert alert-danger">
                                            @ViewBag.Message
                                        </div>
                                    }
                                </div
                                    <!--First name-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="firstName">First Name</label>
                                            <input asp-for="FirstName" type="text" class="form-control" id="firstName"
                                                   placeholder="Enter first name">
                                        </div>
                                    </div>
                                    <!--Last name-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="secondName">Last Name</label>
                                            <input asp-for="LastName" type="text" class="form-control" id="secondName"
                                                   placeholder="Enter last name">
                                        </div>
                                    </div>
                                    <!--Username-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="username">Username</label>
                                            <input asp-for="UserName" type="text" class="form-control" id="username"
                                                   placeholder="Enter username">
                                        </div>
                                    </div>
                                    <!--Phone-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="phone">Phone</label>
                                            <input asp-for="PhoneNumber" type="text" class="form-control" id="phone"
                                                   placeholder="Enter phone number">
                                        </div>
                                    </div>
                                </div>
                                @{
                                    Address address = ViewBag.address;
                                }
                                <!--User Adress-->
                                <div class="row gx-5 gy-3">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mt-3 mb-2 text-primary">Address</h6>
                                    </div>
                                    <!--Street-->
                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12">
                                        <div class="form-group">
                                            <label for="Street">Street</label>
                                            <input type="text" class="form-control" name="Street" id="Street" placeholder="Enter Street" value="@address.Street">
                                        </div>
                                    </div>
                                    <!--Street Number-->
                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12">
                                        <div class="form-group">
                                            <label for="Street">Street Number</label>
                                            <input type="text" class="form-control" name="Street_Number" id="Street_Number" placeholder="Enter Street" value="@address.Street_Number">
                                        </div>
                                    </div>
                                    <!--City-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="ciTy">City</label>
                                            <input type="text" class="form-control" name="City" id="ciTy" placeholder="Enter City" value="@address.City">
                                        </div>
                                    </div>
                                    <!--County-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="county">County</label>
                                            <input type="text" class="form-control" name="County" id="county" placeholder="Enter County" value="@address.County">
                                        </div>
                                    </div>
                                    <!--Zip Code-->
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="zIp">Zip Code</label>
                                            <input type="text" class="form-control" name="Zip_Code" id="zIp" placeholder="Zip Code" value="@address.Zip_Code">
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <!--Submit/Cancel buttons-->
                                <div class="row gx-5 gy-3">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="text-end">
                                            <button type="button" id="submit" name="submit"
                                                    class="btn btn-secondary">
                                                Cancel
                                            </button>
                                            <button type="submit" id="submit" name="submit"
                                                    class="btn btn-primary">
                                                Update
                                            </button>
                                        </div>
                                    </div>
                                </div>
</form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{ 
<script>
    $("input[type='image']").click(function () {
        $("input[id='my_file']").click();
    });

</script>
}