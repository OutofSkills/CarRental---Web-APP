
@model Car
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width-device-width, initial-scale=1.0" />
    <!--Bootstrap-->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    <!-- jQuery -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
            crossorigin="anonymous"></script>
    <!--Local CSS-->
    <link rel="stylesheet" href="C:\Users\kojoc\OneDrive\Рабочий стол\CarRental\Frontend\CSS\New_Car.css">
    <title>New Car</title>

</head>

<body class="d-flex flex-column min-vh-100">
    <div class="container-fluid" style="margin-top: auto;">
        <div class="row">
            <div class="col-3"></div>

            <div class="col-6">
                <div class="card">
                    <div class="card-header">
                        <h5 style="text-align: center;">New Car</h5>
                    </div>
                    <div class="card-body">
                        <!--New car form-->
                        <form class="row g-3" asp-action="Create">
                            <div class="col-md-6">
                                <label for="car_category" class="form-label">Category</label>
                                <select class="form-select" id="car_category" aria-label="Car Category" required="true">
                                    <option selected value="">Select the category of the car</option>
                                    <option value="1">Luxury</option>
                                    <option value="2">Standard</option>
                                    <option value="3">Mini</option>
                                    <option value="4">...</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="inputModel" asp-for="Model" class="form-label">Model</label>
                                <input type="text" asp-for="Model" class="form-control" id="inputModel" placeholder="Ex: Tesla Model Y" required="true">
                            </div>
                            <div class="col-12">
                                <label for="inputAddress" class="form-label">Car Location</label>
                                <input type="text" class="form-control" id="inputAddress" placeholder="City" required="true">
                            </div>
                            <div class="col-4">
                                <label for="inputCapacity" class="form-label">Seating Capacity</label>
                                <input type="number" class="form-control" id="inputCapacity"
                                       placeholder="Number of seats..." min="1" required="true">
                            </div>
                            <div class="col-md-4">
                                <label for="inputDoors" class="form-label">Number of doors</label>
                                <input type="number" class="form-control" min="2" id="inputDoors"
                                       placeholder="Number of doors..." required="true">
                            </div>
                            <div class="col-md-4">
                                <label for="inputFuel" asp-for="FuelType" class="form-label">Fuel</label>
                                <select class="form-select" asp-for="FuelType" id="inputFuel" aria-label="Fuel Type" required="true">
                                    <option value="" selected>Select the fuel type</option>
                                    <option value="1">Petrol</option>
                                    <option value="2">Electric</option>
                                    <option value="3">Hybrid</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputTransmission" asp-for="TransmisionType" class="form-label">Transimission Type</label>
                                <select id="inputTransmission" asp-for="TransmisionType" class="form-select" required="true">
                                    <option value="" selected>Choose...</option>
                                    <option value="1">Automatic</option>
                                    <option value="2">Manual</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputAC" asp-for="ClimateControll" class="form-label">AC</label>
                                @Html.DropDownListFor(m => m.ClimateControll, new SelectList(
                                new[]
                                {
                                    new { Value = "true", Text = "Yes" },
                                    new { Value = "false", Text = "No" },
                                },
                                "Value",
                                "Text",
                                Model
                                 ), new { @class = "form-select" })

                            </div>
                            <div class="col-md-4">
                                <label for="inputBodyType" class="form-label">Body Type</label>
                                <select id="inputBodyType" class="form-select" required="true">
                                    <option value="" selected>Body Type</option>
                                    <option value="1">SEDAN</option>
                                    <option value="2">COUPE</option>
                                    <option value="3">SPORT CAR</option>
                                    <option value="4">STATION WAGON</option>
                                    <option value="5">HATCHBACK</option>
                                    <option value="6">CONVERTIBLE</option>
                                    <option value="7">MINIVAN</option>
                                    <option value="8">PICKUP TRUCK</option>
                                    <option value="9">ROADSTER</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="inputAcceleration" asp-for="Acceleration" class="form-label">Acceleration</label>
                                <input type="number" asp-for="Acceleration" class="form-control" min="0" step=".01" id="inputAcceleration"
                                       placeholder="0-100Kmph" required="true">
                            </div>
                            <div class="col-md-4">
                                <label for="inputAssemblyYear" asp-for="Fabrication_Date" class="form-label">Assembly Year</label>
                                <input type="number" asp-for="Fabrication_Date" class="form-control" min="1945" id="inputAssemblyYear"
                                       placeholder="Ex: 1999" required="true">
                            </div>
                            <div class="col-md-4">
                                <label for="inputPrice" class="form-label">Price per Day</label>
                                <input type="number" class="form-control" min="0" id="inputPrice" placeholder="Ex: 25$" required="true">
                            </div>

                            <div class="col-md-4">
                                <label for="pictureUrl" asp-for="PictureURL" class="form-label">Car Image</label>
                                <input type="text"  asp-for="PictureURL" class="form-control" id="pictureUrl" placeholder="Ex: google.com/car.jpg" required="true">
                            </div>

                            @*<div class="col-md-12">
                                <label for="formFile" asp-for="PictureURL" class="form-label">Image</label>
                                <input class="form-control" asp-for="PictureURL" type="file" id="formFile" accept=".jpg,.gif,.png" required="true">
                            </div>*@
                            <div class="col-12" style="text-align: center;">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div><br>

    </div>
</body>

</html>