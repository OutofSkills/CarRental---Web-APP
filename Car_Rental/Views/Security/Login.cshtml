@model Customer
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <!-- Font Awesome CSS -->
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
    <!--JQUERY-->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <!--JavaScript-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
            crossorigin="anonymous"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script type="text/javascript"></script>
    <!--Local CSS-->
    <link rel="stylesheet" href="\css\LoginStyle.css">
    <!--Local JS-->
    <script type="text/javascript" src="\js\Login.js">
    </script>
    <title>Login</title>

    <style>
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <br />
    <!--Container with a Login form section-->
    <div class="container-fluid" style="display: flex; justify-content: center;">
        <!--Login/SignUp buttons-->
        <div class="col-md-5 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <a href="#" class="active" id="login-form-link">Login</a>
                        </div>
                        <div class="col-sm-6">
                            <a href="#" id="register-form-link">Sign Up</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <!--Return Url-->
                @{ 
                    var returnUrl = @Context.Request.Query["returnurl"];
                }
                <!--Login form-->
                <form id="login-form" action="Login" method="post">
                    <div class="imgcontainer">
                        <img src="\Pictures\Avatars\User_avatar_V2.png"
                             alt="Avatar" class="img-fluid" width="100" height="100">
                    </div>
                    <!--Email-->
                    <div class="container">
                        @if (ViewBag.LoginFlag == 1)
                        {
                            <div class="alert alert-success">
                                @ViewBag.Result
                            </div>
                        }
                        else if (ViewBag.LoginFlag == 0)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Result
                            </div>
                        }

                        <input type="hidden" name="returnUrl" value=@returnUrl>

                        <!--Email-->
                        <label><b>Email</b></label>
                        <input asp-for="Email" placeholder="Enter Email" required>

                        <!--Passowrd-->
                        <label for="psw"><b>Password</b></label>
                        <input asp-for="Password" type="password" placeholder="Enter Password" required>

                        <!--Login button and checkbox-->
                        <button type="submit">Login</button>
                        <label>
                            <input type="checkbox" checked="checked" name="remember"> Remember me
                        </label>
                    </div>
                    <!--Cancel/Forgot password section-->
                    <div class="container" style="background-color:#f1f1f1">
                        <button type="button" class="cancelbtn">Cancel</button>
                        <span class="psw">Forgot <a href="#">password?</a></span>
                    </div>
                </form>

                <!--Sign Up form-->
                <form id="register-form" action="Register" method="post" style="display: none;">
                    <div class="imgcontainer">
                        <img src="\Pictures\Avatars\User_avatar_V2.png"
                             alt="Avatar" class="img-fluid" width="100" height="100">
                    </div>
                    @if (ViewBag.Flag == 1)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Message
                        </div>
                    }
                    else if(ViewBag.Flag == 0)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Message
                        </div>
                    }
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <!--First Name-->
                            <label for="firstName"><b>First Name</b></label>
                            <input asp-for="FirstName" type="text" id="firstName" placeholder="Enter First Name" required>
                        </div>
                        <div class="col-6">
                            <!--Second Name-->
                            <label for="lastName"><b>Last Name</b></label>
                            <input asp-for="LastName" type="text" id="lastName" placeholder="Enter Second Name" required>
                        </div>
                    </div>

                    <!--Email and Username-->
                    <div class="row">
                        <div class="col-6">
                            <!--Email-->
                            <label for="email"><b>Email</b></label>
                            <input asp-for="Email" type="email" id="email" placeholder="Enter Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <!--Username-->
                            <label for="username"><b>Username</b></label>
                            <input asp-for="UserName" type="text" id="username" placeholder="Enter Username" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <!--Phone Number-->
                    <label for="phone"><b>Phone Number</b></label>
                    <input asp-for="PhoneNumber" type="text" id="phone" placeholder="Enter Number" required>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    <!--Address-->
                    <div class="row">
                        <div class="col-6">
                            <!--County-->
                            <label for="county"><b>County</b></label>
                            <input type="text" id="county" placeholder="Enter County" name="county" required>
                        </div>
                        <div class="col-6">
                            <!--City-->
                            <label for="city"><b>City</b></label>
                            <input type="text" id="city" placeholder="Enter City" name="city" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <!--Street-->
                            <label for="street"><b>Street</b></label>
                            <input type="text" id="street" placeholder="Enter Street" name="street" required>
                        </div>
                        <div class="col-4">
                            <!--Street Number-->
                            <label for="streetNr"><b>Street Number</b></label>
                            <input type="text" id="streetNr" placeholder="Enter Str. Nr." name="streetNr" min="0" required>
                        </div>
                        <div class="col-4">
                            <!--ZIP Code-->
                            <label for="zip"><b>ZIP Code</b></label>
                            <input type="text" id="zip" placeholder="Enter Zip Code" name="zip" required>
                        </div>
                    </div>


                    <!--Password-->
                    <label for="psw"><b>Password</b></label>
                    <input asp-for="Password" type="password" id="psw" placeholder="Enter Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span><br />

                    <label for="confirm_psw"><b>Confirm password</b></label>
                    <input type="password" id="confirm_psw" placeholder="Confirm Password" required>


                    <!--Sign up button-->
                    <button type="submit">Sign Up</button>
                </div>
                    <!--Cancel-->
                    <div class="container" style="background-color:#f1f1f1">
                        <button type="button" class="cancelbtn">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts{ 
<script>
    var password = document.getElementById("psw")
        , confirm_password = document.getElementById("confirm_psw");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>
}
